{
    "version": 2,
    "builds": [
        {
            "src": "tracker-app.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "public/**"
                ]
            }
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/tracker-app.js"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/daily-report",
            "schedule": "0 8 * * *"
        }
    ]
}